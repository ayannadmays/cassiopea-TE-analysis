###download, rename, and unzip genome
wget https://api.ncbi.nlm.nih.gov/datasets/v2/genome/accession/GCA_964204825.1/download?include_annotation_type=GENOME_FASTA&include_annotation_type=GENOME_GFF&include_annotation_type=RNA_FASTA&include_annotation_type=CDS_FASTA&include_annotation_type=PROT_FASTA&include_annotation_type=SEQUENCE_REPORT&hydrated=FULLY_HYDRATED
unzip cas_PORT.fna

###run repeatmodeler job: repeatmodeler_cas_PORT.job
#!/bin/bash

#SBATCH -p 128x24  
#SBATCH -J repeatmodeler_cas_PORT        
#SBATCH --mail-user=aymays@ucsc.edu
#SBATCH --mail-type=ALL
#SBATCH -o repeatmodeler_cas_PORT.out
#SBATCH -N 1      
#SBATCH -n 16      
#SBATCH -t 100:00:00  
#SBATCH --mem=100G

export LC_ALL='C'
module load repeatmodeler
BuildDatabase -name cas_PORT_db cas_PORT.fna
#run repeat modeler
RepeatModeler -engine ncbi -threads 16 -database cas_PORT_db

###run repeatmasker job: repeatmasker_cas_PORT.job
#!/bin/bash

#SBATCH -p 128x24
#SBATCH -J repeatmasker_cas_PORT     
#SBATCH --mail-user=aymays@ucsc.edu
#SBATCH --mail-type=ALL
#SBATCH -o repeatmasker_cas_PORT.out    
#SBATCH -N 1      
#SBATCH -n 16       
#SBATCH -t 64:00:00  
#SBATCH --mem=75G 

export LC_ALL='C'
module load repeatmodeler
RepeatMasker -lib cas_PORT_db-families.fa -pa 16 cas_PORT.fna -a

###run calcdiv job: calcdiv_cas_PORT.job
#!/bin/bash

#SBATCH -p 128x24   
#SBATCH -J calcdiv     
#SBATCH --mail-user=aymays@ucsc.edu
#SBATCH --mail-type=ALL
#SBATCH -o calcdiv_cas_PORT.out   
#SBATCH -N 1       
#SBATCH -n 16       
#SBATCH -t 1:00:00  
#SBATCH --mem=12G 

export LC_ALL='C'
module load repeatmodeler
calcDivergenceFromAlign.pl -s cas_PORT.divsum cas_PORT.align


###run repeatlandscape job: repeatlandscape_cas_PORT.job, input genome size after -g
#!/bin/bash

#SBATCH -p 128x24 
#SBATCH -J repeatlandscape_cas_PORT       
#SBATCH --mail-user=aymays@ucsc.edu
#SBATCH --mail-type=ALL
#SBATCH -o repeatlandscape_cas_PORT.out   
#SBATCH -N 1       
#SBATCH -n 16      
#SBATCH -t 1:00:00  
#SBATCH --mem=12G 

module load repeatmodeler
createRepeatLandscape.pl -div cas_PORT.divsum -g 376932402 > repeatlandscape_cas_PORT.html
